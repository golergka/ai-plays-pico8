# PICO-8 Configuration
PICO8_PATH=/Applications/pico-8/PICO-8.app/Contents/MacOS/pico8
PICO8_WINDOWED=true
PICO8_VOLUME=128
PICO8_DEFAULT_CARTRIDGE=input/cartridges/key_test.p8

# Capture Configuration
CAPTURE_ENABLED=true
CAPTURE_INTERVAL=1000
CAPTURE_SAVE_TO_DISK=true
CAPTURE_OUTPUT_DIR=./captures
CAPTURE_FORMAT=png
CAPTURE_QUALITY=90

# LLM Vision Configuration
# OPENAI_API_KEY is expected to be set in your shell environment
# No need to set it here if you have it in your bash profile
OPENAI_MODEL=gpt-4-vision-preview
OPENAI_MAX_TOKENS=300
OPENAI_TEMPERATURE=0.5
LLM_CAPTURE_INTERVAL=2000

# Application Configuration
APP_DEBUG=true