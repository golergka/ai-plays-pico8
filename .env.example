# PICO-8 Configuration
# Path to PICO-8 executable (required)
PICO8_PATH=/Applications/pico-8/PICO-8.app/Contents/MacOS/pico8

# Optional: Launch PICO-8 in windowed mode (default: true)
PICO8_WINDOWED=true

# Optional: Set PICO-8 sound volume 0-256 (default: 128)
PICO8_VOLUME=128

# Optional: Default cartridge to load
PICO8_DEFAULT_CARTRIDGE=input/cartridges/test_game.p8

# Screen Capture Configuration
# Optional: Enable screen capture (default: false)
CAPTURE_ENABLED=false

# Optional: Capture interval in milliseconds (default: 1000)
CAPTURE_INTERVAL=1000

# Optional: Save captures to disk (default: false)
CAPTURE_SAVE_TO_DISK=false

# Optional: Output directory for saved captures (default: ./captures)
CAPTURE_OUTPUT_DIR=./captures

# Optional: Image format for saved captures (png, jpg, webp) (default: png)
CAPTURE_FORMAT=png

# Optional: Image quality for jpg/webp (1-100) (default: 90)
CAPTURE_QUALITY=90

# Application Configuration
# Optional: Enable debug mode
APP_DEBUG=false