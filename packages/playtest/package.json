{
  "name": "@ai-gamedev/playtest",
  "module": "index.ts",
  "type": "module",
  "engines": {
    "bun": ">=1.2.0"
  },
  "scripts": {
    "start": "bun run index.ts",
    "play:human": "bun run src/scripts/play-human.ts",
    "play:ai": "bun run src/scripts/play-ai.ts",
    "play:claude": "bun run src/scripts/play-claude.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@adobe/jsonschema2md": "^8.0.2",
    "@ai-sdk/openai": "^1.2.5",
    "active-win": "^9.0.0",
    "ai": "^4.1.61",
    "capture-window": "^0.2.0",
    "chalk": "^5.3.0",
    "dotenv": "^16.4.1",
    "keyboardjs": "^2.7.0",
    "robotjs": "0.6.0",
    "screenshot-desktop": "^1.15.1",
    "sharp": "^0.33.5",
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.24.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.11.19",
    "@types/screenshot-desktop": "^1.12.3",
    "vitest": "^3.0.9"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}