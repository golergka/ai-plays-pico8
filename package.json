{
  "name": "@ai-gamedev/monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "bun": ">=1.2.0"
  },
  "scripts": {
    "preinstall": "node -e \"if(process.env.npm_execpath.includes('npm')) throw new Error('Please use Bun with this project: https://bun.sh')\"",
    "typecheck": "bun run --cwd packages/playtest typecheck",
    "test": "bun run --cwd packages/playtest test",
    "test:watch": "bun run --cwd packages/playtest test:watch",
    "test:ui": "bun run --cwd packages/playtest test:ui",
    "test:coverage": "bun run --cwd packages/playtest test:coverage",
    "play": "bun run packages/play/cli.ts",
    "play:human": "bun run packages/play/cli.ts human",
    "play:ai": "bun run packages/play/cli.ts ai",
    "start": "bun run packages/play/cli.ts"
  },
  "packageManager": "bun@1.2.0"
}